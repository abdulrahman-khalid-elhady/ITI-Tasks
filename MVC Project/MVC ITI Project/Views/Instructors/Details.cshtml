@model MVC_ITI_Project.Models.Instructor

@{
    ViewData["Title"] = "Instructor Details";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Instructor Details</h2>

    <div class="card shadow p-4">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Salary</dt>
            <dd class="col-sm-9">@Model.Salary</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Department?.Name</dd>

            <dt class="col-sm-3">Course</dt>
            <dd class="col-sm-9">@Model.Course?.Name</dd>
        </dl>

        <div class="d-flex justify-content-end gap-2 mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>
