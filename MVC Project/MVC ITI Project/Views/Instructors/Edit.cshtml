@model MVC_ITI_Project.Models.Instructor
@{
    ViewData["Title"] = "Edit Instructor";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Edit Instructor</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Salary" class="form-label"></label>
            <input asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DeptId" class="form-label"></label>
            <select asp-for="DeptId" asp-items="ViewBag.DeptId" class="form-select" id="deptSelect">
                <option value="">-- Select Department --</option>
            </select>
            <span asp-validation-for="DeptId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CrsId" class="form-label"></label>
            <select asp-for="CrsId" asp-items="ViewBag.CrsId" class="form-select" id="courseSelect">
                <option value="">-- Select Course --</option>
            </select>
            <span asp-validation-for="CrsId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById("deptSelect").addEventListener("change", function () {
            var deptId = this.value;
            var courseSelect = document.getElementById("courseSelect");
            courseSelect.innerHTML = '<option value="">-- Select Course --</option>';

            if (deptId) {
                var url = '@Url.Action("GetCoursesByDepartment", "Instructors")';
                fetch(url + '?deptId=' + deptId)
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(course => {
                            var option = document.createElement("option");
                            option.value = course.id;
                            option.text = course.name;
                            courseSelect.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Fetch error:', error));
            }
        });
    </script>
}
