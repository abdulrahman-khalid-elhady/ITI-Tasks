@model MVC_ITI_Project.Models.Department
@{
	ViewData["Title"] = "Add Department";
}
<h1 class="text-center">Add Department</h1>
@*make design use tag helper*@
<form asp-action="Add" method="post" class="w-50 mx-auto">
	<div class="form-group">
		<label asp-for="Name" class="control-label"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="ManagerName" class="control-label"></label>
		<input asp-for="ManagerName" class="form-control" />
		<span asp-validation-for="ManagerName" class="text-danger"></span>
	</div>
	<div class="form-group text-center mt-3">
		<input type="submit" value="Add" class="btn btn-primary" />
	</div>
	@*return to the list *@
	<div class="form-group text-center mt-3">
		<a asp-action="Index" class="btn btn-secondary">Back to List</a>
	</div>
</form>








