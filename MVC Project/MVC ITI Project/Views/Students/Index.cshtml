@model  IEnumerable<MVC_ITI_Project.Models.Student>

@{
	ViewData["Title"] = "Student Details";
}
<h1>Student Details</h1>
<form asp-action="Index" method="get" class="form-inline mb-3">
	<input type="text" name="SearchString"
		   value="@ViewData["CurrentFilter"]"
		   class="form-control me-2"
		   placeholder="Search by any field..." />

	<button type="submit" class="btn btn-outline-success">Search</button>
</form>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Image</th>
			<th>Address</th>
			<th>Grade</th>
			<th>Department</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var student in Model)
		{
			<tr>
				<td>@student.Id</td>
				<td>@student.Name</td>
				<td>
					@if (!string.IsNullOrEmpty(student.Image))
					{
						<img src="@student.Image" alt="Student Image" width="100" height="100" />
					}
					else
					{
						<span>No Image</span>
					}
				</td>
				<td>@student.Address</td>
				<td>@student.Grade</td>
				<td>@student.Department?.Name</td>
				<td>
					<a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary btn-sm">Edit</a>
					<a asp-action="Details" asp-route-id="@student.Id" class="btn btn-info btn-sm">Details</a>
					<a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger btn-sm">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
