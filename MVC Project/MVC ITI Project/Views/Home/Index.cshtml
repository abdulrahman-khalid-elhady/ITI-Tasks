@{
    ViewData["Title"] = "Home Dashboard";
}

<!-- Bootstrap & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #f9fafb 0%, #e9eef2 100%);
        font-family: 'Segoe UI', sans-serif;
        min-height: 100vh;
    }

    /* Navbar */
    .navbar-custom {
        background-color: #ffffffcc;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .navbar-brand {
        font-weight: 700;
        color: #1e293b !important;
    }

    .nav-link {
        color: #475569 !important;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .nav-link:hover {
        color: #0d6efd !important;
    }

    /* Welcome section */
    .welcome-banner {
        text-align: center;
        padding: 80px 20px 40px;
    }

    .welcome-banner h1 {
        font-weight: 700;
        color: #1e293b;
    }

    .welcome-banner p {
        color: #64748b;
        font-size: 1.1rem;
    }

    /* Cards */
    .dashboard-card {
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        border-radius: 20px;
        background: white;
    }

    .dashboard-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    }

    .dashboard-card i {
        font-size: 2.8rem;
        margin-bottom: 15px;
    }

    .dashboard-card .btn {
        border-radius: 12px;
        font-weight: 500;
    }
</style>

<!-- ✅ Navbar -->
<nav class="navbar navbar-expand-lg navbar-custom fixed-top">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <i class="bi bi-mortarboard text-primary me-2"></i> University Dashboard
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="bi bi-list"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav gap-2">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Students" asp-action="Index">
                        <i class="bi bi-people"></i> Students
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Departments" asp-action="Index">
                        <i class="bi bi-building"></i> Departments
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Courses" asp-action="Index">
                        <i class="bi bi-book"></i> Courses
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Instructors" asp-action="Index">
                        <i class="bi bi-person-badge"></i> Instructors
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- ✅ Welcome Section -->
<div class="welcome-banner mt-5 pt-5">
    <h1>Welcome to Your Dashboard 👋</h1>
    <p>Manage all your system data easily and efficiently.</p>
</div>

<!-- ✅ Dashboard Cards -->
<div class="container pb-5">
    <div class="row justify-content-center g-4">

        <!-- Students -->
        <div class="col-md-3 col-sm-6">
            <div class="card dashboard-card text-center shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <i class="bi bi-people text-primary"></i>
                    <h4 class="fw-bold">Students</h4>
                    <p class="text-muted flex-grow-1">View, add, and manage student records.</p>
                    <a asp-controller="Students" asp-action="Index" class="btn btn-primary mt-auto">Go</a>
                </div>
            </div>
        </div>

        <!-- Departments -->
        <div class="col-md-3 col-sm-6">
            <div class="card dashboard-card text-center shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <i class="bi bi-building text-success"></i>
                    <h4 class="fw-bold">Departments</h4>
                    <p class="text-muted flex-grow-1">Manage departments and their details.</p>
                    <a asp-controller="Departments" asp-action="Index" class="btn btn-success mt-auto">Go</a>
                </div>
            </div>
        </div>

        <!-- Courses -->
        <div class="col-md-3 col-sm-6">
            <div class="card dashboard-card text-center shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <i class="bi bi-book text-warning"></i>
                    <h4 class="fw-bold">Courses</h4>
                    <p class="text-muted flex-grow-1">Access all courses and related data.</p>
                    <a asp-controller="Courses" asp-action="Index" class="btn btn-warning text-dark mt-auto">Go</a>
                </div>
            </div>
        </div>

        <!-- Instructors -->
        <div class="col-md-3 col-sm-6">
            <div class="card dashboard-card text-center shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <i class="bi bi-person-badge text-danger"></i>
                    <h4 class="fw-bold">Instructors</h4>
                    <p class="text-muted flex-grow-1">Manage instructors and their courses.</p>
                    <a asp-controller="Instructors" asp-action="Index" class="btn btn-danger mt-auto">Go</a>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
