@model MVC_ITI_Project.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Student Details</h2>

    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3 gap-3">
                        <img src="@Model.Image" alt="@Model.Name" class="rounded" style="width:72px;height:72px;object-fit:cover;" onerror="this.style.display='none'" />
                        <div>
                            <h4 class="mb-1">@Model.Name</h4>
                            <span class="text-muted">ID: @Model.Id</span>
                        </div>
                    </div>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                        <dt class="col-sm-4">Grade</dt>
                        <dd class="col-sm-8">@Model.Grade</dd>
                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@Model.Department?.Name</dd>
                    </dl>
                </div>
                <div class="card-footer bg-transparent d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="mb-3">Enrolled Courses</h5>
                    @if (Model.CourseStudents != null && Model.CourseStudents.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Course</th>
                                        <th class="text-center">Degree</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var cs in Model.CourseStudents)
                                {
                                    <tr>
                                        <td>@cs.Course?.Name</td>
                                        <td class="text-center">@cs.Degree</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-muted">No enrollments found.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
