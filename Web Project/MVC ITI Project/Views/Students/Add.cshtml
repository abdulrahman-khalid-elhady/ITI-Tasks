@model MVC_ITI_Project.Models.Student

@{
    ViewData["Title"] = "Add Student";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="modern-card animate-fade-in-up">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-person-plus text-primary fs-4"></i>
                    </div>
                    <div>
                        <h4 class="mb-1 fw-bold">Add New Student</h4>
                        <p class="text-muted mb-0">Create a new student record</p>
                    </div>
                </div>

                <form asp-action="Add" method="post" class="form-modern">
                    <div asp-validation-summary="ModelOnly" class="alert alert-modern alert-danger"></div>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label-modern"></label>
                            <input asp-for="Name" class="form-control form-control-modern" placeholder="Enter student name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Address" class="form-label-modern"></label>
                            <input asp-for="Address" class="form-control form-control-modern" placeholder="Enter address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Grade" class="form-label-modern"></label>
                            <input asp-for="Grade" class="form-control form-control-modern" placeholder="Enter grade" />
                            <span asp-validation-for="Grade" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="DeptId" class="form-label-modern"></label>
                            <select asp-for="DeptId" asp-items="ViewBag.DeptId" class="form-control form-control-modern">
                                <option value="">Select Department</option>
                            </select>
                            <span asp-validation-for="DeptId" class="text-danger"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="Image" class="form-label-modern"></label>
                            <input asp-for="Image" class="form-control form-control-modern" placeholder="Enter image URL" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-modern btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-modern btn-primary">
                            <i class="bi bi-check-lg me-2"></i>Create Student
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}