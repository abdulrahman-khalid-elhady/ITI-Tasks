@model MVC_ITI_Project.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="modern-card border-danger animate-fade-in-up">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-danger bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-exclamation-triangle text-danger fs-4"></i>
                    </div>
                    <div>
                        <h4 class="mb-1 fw-bold text-danger">Delete Department</h4>
                        <p class="text-muted mb-0">This action cannot be undone</p>
                    </div>
                </div>

                <div class="alert alert-modern alert-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this department? This action will permanently remove all associated data including students, courses, and instructors.
                </div>

                <div class="modern-card bg-light">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
                                <i class="bi bi-building text-success fs-4"></i>
                            </div>
                            <div>
                                <h5 class="mb-1 fw-bold">@Model.Name</h5>
                                <small class="text-muted">ID: @Model.Id</small>
                            </div>
                        </div>
                        
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Manager</dt>
                            <dd class="col-sm-8">@Model.ManagerName</dd>
                            <dt class="col-sm-4">Students</dt>
                            <dd class="col-sm-8">
                                <span class="badge badge-modern bg-primary">@Model.Students?.Count()</span>
                            </dd>
                            <dt class="col-sm-4">Courses</dt>
                            <dd class="col-sm-8">
                                <span class="badge badge-modern bg-warning">@Model.Courses?.Count()</span>
                            </dd>
                            <dt class="col-sm-4">Instructors</dt>
                            <dd class="col-sm-8">
                                <span class="badge badge-modern bg-danger">@Model.Instructors?.Count()</span>
                            </dd>
                        </dl>
                    </div>
                </div>
                
                <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-modern btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-modern btn-danger">
                            <i class="bi bi-trash me-2"></i>Delete Department
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>