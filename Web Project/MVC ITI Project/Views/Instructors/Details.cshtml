@model MVC_ITI_Project.Models.Instructor

@{
    ViewData["Title"] = "Instructor Details";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Instructor Details</h2>

    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3 gap-3">
                        <img src="@Model.Image" alt="@Model.Name" class="rounded" style="width:72px;height:72px;object-fit:cover;" onerror="this.style.display='none'" />
                        <div>
                            <h4 class="mb-1">@Model.Name</h4>
                            <span class="text-muted">ID: @Model.Id</span>
                        </div>
                    </div>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Salary</dt>
                        <dd class="col-sm-8">@Model.Salary</dd>
                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@Model.Department?.Name</dd>
                        <dt class="col-sm-4">Course</dt>
                        <dd class="col-sm-8">@Model.Course?.Name</dd>
                    </dl>
                </div>
                <div class="card-footer bg-transparent d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="mb-3">Teaching In Department</h5>
                    <div class="text-muted">@Model.Department?.Name - @Model.Course?.Name</div>
                </div>
            </div>
        </div>
    </div>
</div>
