@model MVC_ITI_Project.Models.CourseStudents

@{
    ViewData["Title"] = "Edit Enrollment";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="modern-card animate-fade-in-up">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-pencil-square text-info fs-4"></i>
                    </div>
                    <div>
                        <h4 class="mb-1 fw-bold">Edit Enrollment</h4>
                        <p class="text-muted mb-0">Update enrollment information</p>
                    </div>
                </div>

                <form asp-action="Edit" method="post" class="form-modern">
                    <div asp-validation-summary="ModelOnly" class="alert alert-modern alert-danger"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="StdId" class="form-label-modern"></label>
                            <select asp-for="StdId" asp-items="ViewBag.StdId" class="form-control form-control-modern">
                                <option value="">Select Student</option>
                            </select>
                            <span asp-validation-for="StdId" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="CrsId" class="form-label-modern"></label>
                            <select asp-for="CrsId" asp-items="ViewBag.CrsId" class="form-control form-control-modern">
                                <option value="">Select Course</option>
                            </select>
                            <span asp-validation-for="CrsId" class="text-danger"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="Degree" class="form-label-modern"></label>
                            <input asp-for="Degree" class="form-control form-control-modern" placeholder="Enter grade (0-100)" />
                            <span asp-validation-for="Degree" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-modern btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-modern btn-info">
                            <i class="bi bi-check-lg me-2"></i>Update Enrollment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}