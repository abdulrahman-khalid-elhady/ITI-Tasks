@model IEnumerable<MVC_ITI_Project.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-in-up">
    <div>
        <h2 class="mb-1 fw-bold">Courses Management</h2>
        <p class="text-muted mb-0">Manage academic courses and curriculum</p>
    </div>
    <a class="btn btn-modern btn-warning" asp-action="Add">
        <i class="bi bi-plus-lg me-2"></i>Add Course
    </a>
</div>

<!-- Modern Search -->
<div class="search-modern animate-fade-in-up animate-delay-1">
    <form method="get" asp-action="Index">
        <div class="position-relative">
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" 
                   class="form-control form-control-modern" placeholder="Search courses..." />
            <i class="bi bi-search"></i>
        </div>
    </form>
</div>

<!-- Modern Table -->
<div class="modern-card animate-fade-in-up animate-delay-2">
    <div class="table-responsive">
        <table class="table modern-table mb-0">
            <thead>
                <tr>
                    <th>Course</th>
                    <th>Department</th>
                    <th>Hours</th>
                    <th>Degree</th>
                    <th>Min Degree</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="animate-fade-in-up">
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                                    <i class="bi bi-book text-warning"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">@item.Name</div>
                                    <small class="text-muted">ID: @item.Id</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="badge badge-modern bg-success">@item.Department?.Name</span>
                        </td>
                        <td>
                            <span class="fw-semibold text-info">@item.Hours</span>
                        </td>
                        <td>
                            <span class="fw-semibold text-primary">@item.Degree</span>
                        </td>
                        <td>
                            <span class="fw-semibold text-secondary">@item.MinimumDegree</span>
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5 animate-fade-in-up">
        <i class="bi bi-book display-1 text-muted"></i>
        <h4 class="mt-3 text-muted">No courses found</h4>
        <p class="text-muted">Start by adding your first course to the system.</p>
        <a asp-action="Add" class="btn btn-modern btn-warning">
            <i class="bi bi-plus-lg me-2"></i>Add First Course
        </a>
    </div>
}